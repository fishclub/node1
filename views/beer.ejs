<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Add Beer</h1>
    <% if (flash.messages.length > 0) { %>
        <div class="alert alert-danger">
    <% for (var i = 0; i < flash.messages.length; i++) { %>
       <%= flash.messages[i].msg %></br>
    <% } %>
    </div>
    <% } %>
   
    <!--LOGIN FORM -->
    <form action="/beers" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" value="<%= beer.name %>" required>
        </div>
        <div class="form-group">
            <label>Type</label>
            <input type="text" class="form-control" name="type" value="<%= beer.type %>" required>
        </div>
		<div class="form-group">
            <label>Quantity</label>
            <input type="text" class="form-control" name="quantity" value="<%= beer.quantity %>" required>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Add</button>
    </form>

    <hr>

    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>